@{
    var isHome = ViewContext.RouteData.Values["Controller"].ToString() == "Employee" &&
                  ViewContext.RouteData.Values["Action"].ToString() == "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recruiter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobSearchAndRecruitmentWebClient.styles.css" asp-append-version="true" />
    <style>
        .nav-link {
            position: relative;
        }

            .nav-link::before {
                content: "";
                width: 0;
                height: 3px;
                background-color: #e6b800;
                position: absolute;
                bottom: -8px;
                left: 0;
            }

        .nav-item.active .nav-link::before, .nav-item:hover .nav-link::before {
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="Home">Job Search & Recruitment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(isHome ? "active" : "")">
                            <a class="nav-link text-white" asp-area="" asp-controller="Employee" asp-action="Home">Post jobs</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold text-white" asp-area="" asp-controller="Employee" asp-action="Login">Log In</a>
                        </li>
                        @* {
                        <li class="nav-item">
                        <a class="nav-link font-weight-bold text-primary" asp-area="" asp-controller="JobSeeker" asp-action="Login">Log In</a>
                        </li>
                        } *@
                        <li class="nav-item" style="pointer-events: none;">
                            <a class="nav-link text-white">
                                <span style="font-weight: normal;"> | </span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Job search</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Job Search & Recruitment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>