@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-3">
    <div class="col-6">
        <h2>Jobs</h2>
    </div>
    <div class="col-6 text-end">
        <a href="#" class="btn btn-primary">Jobs Post</a>
    </div>
</div>

<div class="row mt-3">
    <div class="col-6">
        <div class="input-group">
            <span class="input-group-text">Filter:</span>
        </div>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <div class="dropdown" style="padding-right: 10px;">
            <button type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                Sorted by:
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Date submitted</a></li>
                <li><a class="dropdown-item" href="#">Title</a></li>
                <li><a class="dropdown-item" href="#">Jobs status</a></li>
            </ul>
        </div>
        <div class="dropdown" style="padding-left: 10px;">
            <button type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                Order by:
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Descending</a></li>
                <li><a class="dropdown-item" href="#">Ascending</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row mt-3">
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>JobId</th>
                <th>Title</th>
                <th>Description</th>
                <th>Industry</th>
                <th>Job Posting Date</th>
                <th>Time Type</th>
                <th>Status</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadJobs();

            function loadJobs() {
                $("table tbody").html("");

                $.ajax({
                    url: "http://localhost:5090/odata/Job",
                    type: "GET",
                    contentType: "application/json",
                    success: function (result, status, xhr) {
                        console.log('Data received:', result.value);
                        $.each(result.value, function (index, value) {
                            var appendElement = $("<tr>");
                            appendElement.append($("<td>").html(value["JobId"]));
                            appendElement.append($("<td>").html(value["Title"]));
                            appendElement.append($("<td>").html(value["Description"]));
                            appendElement.append($("<td>").html(value["Industry"]));
                            appendElement.append($("<td>").html(value["CreateDate"]));
                            appendElement.append($("<td>").html(value["TimeType"]));
                            appendElement.append($("<td>").html(value["Status"]));

                            // Add view details button
                            var viewDetailsButton = $("<button>")
                                .text("View Details")
                                .addClass("btn btn-info btn-sm mx-1")
                                .on("click", function () {
                                    // Add logic to handle view details
                                    alert("View details clicked for JobId: " + value["JobId"]);
                                });
                            appendElement.append($("<td>").append(viewDetailsButton));

                            // Add apply button
                            var applyButton = $("<button>")
                                .text("Apply")
                                .addClass("btn btn-success btn-sm mx-1")
                                .on("click", function () {
                                    // Add logic to handle job application
                                    alert("Apply success for JobId: " + value["JobId"]);
                                });
                            appendElement.append($("<td>").append(applyButton));

                            $("tbody").append(appendElement);
                        });
                    },
                    error: function (error) {
                        console.log('Error loading jobs', error);
                    }
                });
            }
        });
    </script>
}
