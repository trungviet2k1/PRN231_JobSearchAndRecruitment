@model Employer
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutJobSeeker";
}

<style>
    .btn-login {
        width: 100%;
    }
</style>

<div class="text-center mt-5 mb-4">
    <h3 class="header-login" style="color: blue;">JSAR</h3>
    <span class="text-danger">@ViewData["Error"]</span>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="rounded border p-4">
                <a href="@Url.Action("Home", "Employer")" class="btn btn-close"></a>
                <form asp-action="Login" method="post">
                    <div class="form-group mb-4">
                        <div class="text-center">
                            <strong>Sign in to continue working!</strong>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group mb-4">
                        <label asp-for="Email">
                            <strong>Email</strong> <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password">
                            <strong>Password</strong> <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <button class="btn btn-primary btn-login btn-block" type="submit">Login</button>
                    </div>

                    <div class="form-group mb-4 text-center">
                        <p class="text-sm font-semibold"><a href="@Url.Action("Register", "Employer")" class="btn-link">Sign up</a> an account to take the next step</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>